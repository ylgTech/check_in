/**app.wxss**/
@import "colorui/main.wxss";
@import "colorui/icon.wxss";

.navi-color {
  color: white;
}

.body {
  height: 100vh;
  background-image: linear-gradient(to bottom, #35a6df, 32%, white 32%);
}

.bar-to-hang {
  width: 92%;
  margin: 40rpx 4% 0 4%;
  height: 1rpx;
  border: #224EA7 solid 12rpx;
  border-radius: 8rpx;
}

.hanging-part {
  width: 90%;
  margin: -12rpx 5% 0 5%;
  height: 8rpx;
  border-bottom: 20rpx solid white;
  border-right: 12rpx solid transparent;
  border-left: 12rpx solid transparent;
}

.container {
  background-color: white;
  width: 90%;
  margin-left: 5%;
  padding: 60rpx 0;
  display: flex;
  justify-content: center;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.08);
}

.border-bottom {
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.school-badge {
  width: 193rpx;
  height: 186rpx;
}