<cu-custom bgColor="bg-blue cu" isBack="{{false}}">
	<view slot="content">粉冶院打卡小程序</view>
</cu-custom>
<image class='background' style="height:{{windowHeight-statusBarHeight-titleBarHeight}}px" src="/image/bgimge.png" mode="aspectFill"></image>
<view>
	<image class="bg" style="height:{{windowHeight-statusBarHeight-titleBarHeight}}px" src="/image/tap.png"></image>
	<image class="bg1" style="height:{{windowHeight-statusBarHeight-titleBarHeight}}px" src="/image/logo.png"></image>
</view>
<view class="login" style="height:{{windowHeight*0.18}}px;width:{{windowWidth*0.8}}px;top:{{windowHeight*0.42}}px">
	<view class="container-num">
		<text  style="width:{{windowWidth*0.2}}px;">账号：</text>
		<input style="width:{{windowWidth*0.4}}px;" placeholder="请输入账号" value="{{username}}" bindblur="mess_change"></input>
	</view>
	<view class="container-name">
		<text style="width:{{windowWidth*0.2}}px;">密码：</text>
		<input style="width:{{windowWidth*0.4}}px;" placeholder="请输入密码" value="{{password}}" bindblur="mess_change2" password="true"></input>
	</view>
	<checkbox-group class="cu-form-group" bindchange="checkboxChange">
		<checkbox value="Ofi" checked="{{false}}" class="cb blue"></checkbox>
		<view class="title">以管理员身份进入</view>
	</checkbox-group>
	<view  class="log" bindtap="submit">
		<image src="/image/log.png" style="height:60px;width:60px;"></image>
	</view>
</view>