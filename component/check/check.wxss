/* component/check/check.wxss */
.image-container {
  width: 600rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.camera-box {
  background-color: #35a6df;
  border-radius: 50%;
  width: 300rpx;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow:  0px 2px 4px #35a6df;
}

.camera-icon {
  font-size: 160rpx;
  background: linear-gradient(138.43deg, #FFFFFF 44.3%, rgba(255, 255, 255, 0) 123.86%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.hint {
  font-size: 1.5em;
  margin-top: 1em;
  color: #35a6df;
}

.check-btn {
  width: 80%;
  margin-left: 10%;
  margin-top: 20rpx;
}